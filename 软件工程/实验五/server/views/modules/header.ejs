<script>
var token = localStorage.getItem('token');
var userInfo = localStorage.getItem('userInfo');
var quickLink = document.getElementById('quickLink'),
    spanYes = quickLink.querySelector('.login-yes'),
    spanNo = quickLink.querySelector('.login-no');
    
if(token){
    spanYes.style.display='block';
    spanYes.innerText = '用户名：'+userInfo;
    spanNo.style.display='none';
} else {
    spanYes.style.display='none';
    spanNo.style.display='block';
}

</script>